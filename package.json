{
  "name": "@designervoid/ton-design-system",
  "repository": "git://github.com/designervoid/ton-design-system.git",
  "files": [
    "src/index.css",
    "src/stories/styles/dist/**/*.css"
  ],
  "version": "1.0.5",
  "scripts": {
    "dev:postcss": "postcss ./src/assets/styles/index.pcss --output ./src/index.css --env development --watch --verbose",
    "prod:postcss": "postcss ./src/assets/styles/index.pcss --output ./src/index.css",
    "dev": "concurrently --kill-others \"yarn dev:postcss\" \"vite\"",
    "build": "yarn prod:postcss && vue-tsc --noEmit && vite build",
    "test:open": "peeky open",
    "test": "peeky run",
    "storybook:dev": "concurrently --kill-others \"yarn batch-pcss:dev\" \"start-storybook -p 6006\"",
    "build-storybook": "build-storybook",
    "batch-pcss:dev": "node --loader ts-node/esm ./scripts/batching-pcss.mts --type dev",
    "batch-pcss:prod": "node --loader ts-node/esm ./scripts/batching-pcss.mts --type prod"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@peeky/test": "^0.10.2",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/builder-vite": "^0.2.2",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/vue3": "^6.5.10",
    "@types/node": "^17.0.8",
    "@vitejs/plugin-vue": "^1.9.3",
    "@vue/test-utils": "^2.0.0-rc.18",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.0.0",
    "cssnano": "^5.0.16",
    "path": "^0.12.7",
    "postcss": "^8.4.6",
    "postcss-apply-class": "^0.1.6",
    "postcss-cli": "^9.1.0",
    "postcss-each": "^1.1.0",
    "postcss-for": "^2.1.1",
    "postcss-import": "^14.0.2",
    "postcss-load-config": "^3.1.1",
    "postcss-nested": "^5.0.6",
    "postcss-simple-vars": "^6.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.4.3",
    "vite": "^3.0.4",
    "vue": "^3.2.41",
    "vue-loader": "^16.8.3",
    "vue-tsc": "^0.3.0",
    "zx": "^7.1.1"
  }
}
